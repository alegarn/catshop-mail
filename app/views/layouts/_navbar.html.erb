      <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
        <li> <%= link_to "Home", root_path , class:"btn btn-nav me-2"%></li>
      </ul>

      <div class="text-end">

      

        <%  if user_signed_in? %>
        <%# Navbar administrateur  %>

        <%  if current_user.is_admin? %>
        <%= link_to 'Order List', [:admin, Order], class:"btn btn-nav me-2" %>
        <% end %>
        <%  if current_user.is_admin? %>
        <%= link_to 'Items modifications', [:admin, Item], class:"btn btn-nav me-2" %>
        <% end %>

        <%# Navbar utilisateur %>


        <% if Cart.find_by(user_session).total == nil && Order.find_by(user_session).total == nil %> <!-- user_id.params[:user_id] -->

        <%= link_to "My cart - Empty ", root_path , class:"btn btn-nav me-2"%> <!-- un path aller à un panier vide _empty_cart.html.erb -->
        <%= link_to "My order - Empty", root_path , class:"btn btn-nav me-2"%> <!-- un path  aller à un order vide _empty_order.html.erb-->

        <% elsif Cart.find_by(user_session).total != nil && Order.find_by(user_session).total == nil %>

        <%= link_to "My cart", root_path , class:"btn btn-nav me-2"%> <!-- un path aller à un panier vide _empty_cart.html.erb -->
        <%= link_to "My order - Empty", root_path  , class:"btn btn-nav me-2"%>

        <% else %>

        <%= link_to "My cart", root_path , class:"btn btn-nav me-2"%> <!-- cart_path(cart.id) -->
        <%= link_to "My order", root_path  , class:"btn btn-nav me-2"%> <!-- order_path(order.id)-->

        <% end %>



        <%= link_to "My profil", user_path(current_user.id)  , class:"btn btn-nav me-2"%> <!-- cart_path -->
        <a href="<%= root_path %>" class="btn btn-nav me-2"><img class="logocart" src="https://cdn-icons.flaticon.com/png/512/3002/premium/3002240.png?token=exp=1647342266~hmac=3efc55ddbe98e98e6a389ad2acd692f0" alt="" width="30" height="30"></a>  <!-- cart_path(cart.id) -->
        <%= link_to "Log-out", destroy_user_session_path , method: :delete, class:"btn btn-signup"%>

        <% else %>

        <%= link_to "Log-in", new_user_session_path , class:"btn btn-nav me-2"%>
        <%= link_to "Sign-up", new_user_registration_path , class:"btn btn-signup"%>

        <% end %>

      </div>
    </div>
  </div>
</header>

