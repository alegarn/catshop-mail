
<div class="container mt-5">
    <div class="row d-flex justify-content-center">
        <div class="col-md-8">
            <div class="card p-3 py-4">
                <div class="text-center"> <img src="https://i.imgur.com/bDLhJiP.jpg" width="100" class="rounded-circle"> </div>
                <div class="text-center mt-3"> 
                <% if @user.first_name.nil? || @user.last_name.nil?%>
                    <h3 class="mt-2 mb-0"><%=@user.first_name%> <%=@user.last_name %></h3> 
                    <br/>
                    <% end %>
                    <div class="px-4 mt-1">
                    <% if !@user.adress.nil? %>
                        <h6>Adress:&nbsp;&nbsp;&nbsp;<%=@user.adress%></h6><br/>
                        <% end %>
                    <% if !@user.zipcode.nil? %>    
                        <h6>Zipcode:&nbsp;&nbsp;&nbsp;<%=@user.zipcode%></h6><br/>
                        <% end %>
                    <% if !@user.email.nil? %>    
                        <h6>Email:&nbsp;&nbsp;&nbsp;<%=@user.email%></h6><br/>
                        <% end %>
                    </div>
                    
                    <div class="buttons">
                     <a href="<%=order_path(@user.id)%>"  class="btn btn-outline-primary px-4">My orders</a>
                     <a  href="<%= edit_user_registration_path %>" class="btn btn-primary px-4 ms-3">Settings</a> 
                     <a href="<%= edit_user_path(@user.id) %>" class="btn btn-outline-primary px-4 ms-3">Edit profile</a>

                     </div>
                </div>
            </div>
        </div>
    </div>
</div>

